<h2 style="color:white;"> Hi New User! </h1>
<%= form_with model: @user  do |f|%>
    <%= f.label :username %>
    <%= f.text_field :username %><br>

    <%= f.label :password %>
    <%= f.text_field :password %><br>

    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation %><br>
    
    <%= f.submit %>
<% end %>