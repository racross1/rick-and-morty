<h3 style="color:white;"> Make a New Rick </h3> 
<br>
<%= form_with model: @rick do |f| %> 
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :attitude %>
    <%= f.text_field :attitude %><br>

    <%= f.label :species %>
    <%= f.text_field :species %><br>

    <%= f.label :img %> (image url of your rick)
    <%= f.text_field :img %><br>
    <br>
    <%= f.submit %>
<% end %>

