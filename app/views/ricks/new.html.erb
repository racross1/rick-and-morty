<h1> Make a new Rick </h1> 

<% if flash[:errors] %> 
    <% flash[:errors].each do |error| %>
        <p> <%= error %> </p>
    <% end %>
<% end %>


<%= form_with model: @rick do |f| %> 
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :attitude %>
    <%= f.text_field :attitude %><br>

    <%= f.label :species %>
    <%= f.text_field :species %><br>
    <br>
    <%= f.submit %>
<% end %>

<br>
<%=link_to "All Ricks", ricks_path %>
<br>
<%=link_to "Home", '/' %>